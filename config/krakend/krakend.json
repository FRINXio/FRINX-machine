{
  "version": 2,
  "name": "krakend for FM",
  "port": 8080,
  "cache_ttl": "3600s",
  "tls": {{ include "tls/tls.json" }},
  "timeout": "2m",
  "plugin": {
    "pattern": ".so",
    "folder": "/usr/local/lib/krakend/"
  },
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST"
      ],
      "allow_credentials": true
    },
    "github_com/devopsfaith/krakend-gologging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "github_com/ifaisalalam/krakend-gin-logger": {
      "enabled": true,
      "skip_paths": ["/__health"]
    }
  },
  "endpoints": [
    {{ template "workflow_proxy.tmpl" .workflow_proxy_settings.endpoints }},
    {{ template "inventory.tmpl" .inventory_settings.endpoints }},
    {{ template "uniconfig.tmpl" .uniconfig_settings }},
    {{ template "uniresource.tmpl" .uniresource_settings.endpoints }},
    {{ template "frinx_frontend.tmpl" .frinx_frontend_settings}}
  ]
}
