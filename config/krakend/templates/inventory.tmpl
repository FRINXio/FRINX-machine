{
    "endpoint": "/api/inventory",
    "method": "POST",
    "input_headers": [ {{ include "allowed_headers.tmpl" }}, "referer", ":path", "cookie"],

    "extra_config": {
        {{ $jwt_production := env "AUTH_ENABLED" }}
        {{ if eq $jwt_production "true" }}
            {{ include "jwt_config.tmpl" }}
        {{ else if eq $jwt_production "false" }}
            {{ include "jwt_fake_config.tmpl" }}
        {{ end }}
    },

    "backend": [
        {
            "url_pattern": "/graphql",
            "sd": "static",
            "disable_host_sanitize": false,
            "extra_config": {
                "modifier/martian": {
                    "fifo.Group": {
                        "scope": ["request", "response"],
                        "aggregateErrors": true,
                        "modifiers": [
                            {
                                "header.Modifier": {
                                    "scope": ["request"],
                                    "name": "Content-Type",
                                    "value":  "application/json"
                                }
                            }
                        ]
                    }
                }
            },
            "host": [
                "inventory:8000"
            ]
        }
    ]
}, 
